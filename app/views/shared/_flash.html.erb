<% if flash[:notice] || flash[:alert] %>
  <% classes = flash[:notice] ? "border-emerald-200 bg-emerald-100 text-emerald-800" : "border-red-200 bg-red-100 text-red-800" %>
  <div class="my-4 text-sm border  mb-4 px-4 py-3 rounded <%= classes %>">
    <%= flash[:notice] || flash[:alert] %>
  </div>
<% end %>
