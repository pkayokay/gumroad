<% shared_classes = "text-white py-4 block pl-10 pr-12 hover:text-pink duration-100 border-t border-t-neutral-500" %>
<% last_child_classses = "#{shared_classes} border-b border-b-neutral-500" %>
<nav class="bg-black h-screen w-[220px] min-w-[220px] overflow-y-scroll flex flex-col">
  <h1><%= link_to "Gumroad", admin_path, class: "text-white font-medium uppercase text-3xl my-8 py-5 text-center block" %></h1>
  <div class="space-y-16 flex-1">
    <ul class="">
      <li><%= link_to "Home", admin_path, class: shared_classes + " #{'!text-pink' if request.path == admin_path}" %></li>
      <li><%= link_to "Products", products_path, class: shared_classes + " #{'!text-pink' if request.path == products_path}" %></li>
      <li><%= link_to "Emails", emails_path, class: shared_classes %></li>
      <li><%= link_to "Followers", followers_path, class: last_child_classses + " #{'!text-pink' if request.path == followers_path}" %></li>
    </ul>
    <ul class="">
      <li><%= link_to "Discover", root_path, class: shared_classes %></li>
      <li><%= link_to "Library", library_path, class: last_child_classses + " #{'!text-pink' if request.path == library_path}" %></li>
    </ul>
  </div>
  <ul class="mt-16">
    <li><%= link_to "Help", "https://help.gumroad.com/", class: shared_classes, target: "_blank" %></li>
    <li><%= link_to "Setings", settings_path, class: shared_classes + " #{'!text-pink' if request.path == settings_path}" %></li>
    <li class="text-left">
      <%= button_to sign_out_path, method: :delete, class: "text-left", form: {class: shared_classes }, data: { turbo: false } do %>
        <img src="<%= current_user.avatar_url %>" class="w-[50px] rounded-full mb-3" />
        <div>
          <p class="block truncate w-[150px]"><%= current_user.email %></p>
          <span class="text-sm">Sign out</span>
        </div>
      <% end %>
    </li>
  </ul>
</nav>